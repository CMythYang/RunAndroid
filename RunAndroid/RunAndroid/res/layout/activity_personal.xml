<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baseview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/back"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:text="@string/Personal_center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/Setting"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="#000"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" >

            <RelativeLayout
                android:id="@+id/relativeLayouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_pressed4" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/grzybg" >

                        <com.yangsion.runandroid.widget.CircleImageView
                            android:id="@+id/pick"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/pick"
                            app:border_color="@color/san_oooooo"
                            app:border_width="1dp" />

                        <TextView
                            android:id="@+id/nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pick"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout1"
                    android:layout_centerHorizontal="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingTop="26dp" >

                    <RelativeLayout
                        android:id="@+id/btn_username"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/ic_launcher" />

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:cursorVisible= "false" 
                            android:background="#00000000"
                            android:layout_marginLeft="26dp"
                            android:layout_toRightOf="@+id/img"
                            android:textColor="#fff"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:text=">" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="26dp"
                            android:layout_toLeftOf="@+id/textView"
                            android:layout_marginRight="16dp"
                            android:text="@string/Longdown_number_copy" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="#66ffffff" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_sex"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/sex" />

                        <TextView
                            android:id="@+id/sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="26dp"
                            android:layout_toRightOf="@+id/img2"
                            android:text="@string/Man_or_woman"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="#66ffffff" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:text=">" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_email_status"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/yx" />

                        <TextView
                            android:id="@+id/email_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="26dp"
                            android:layout_toRightOf="@+id/img3"
                            android:text="@string/Not_bingding"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.1px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="#66ffffff" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:text=">" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="6dp"
                            android:layout_toLeftOf="@+id/textView2" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="26dp"
                        android:text="@string/Hobbies_signature"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/perso"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:background="@drawable/btn_selector8s"
                        android:hint="@string/Say_something"
                        android:padding="6dp" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#66ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="#000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/update_nick"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="@drawable/btn_selector8"
                android:textColor="#fff"
                android:text="@string/Update_nick" />

            <Button
                android:id="@+id/update_pick"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:textColor="#fff"
                android:background="@drawable/btn_selector8"
                android:layout_weight="1"
                android:text="@string/Update_pick" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/frame_showimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/showimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="36dp" />
    </RelativeLayout>

</RelativeLayout>